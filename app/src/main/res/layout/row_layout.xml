<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground" >

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Title"
        android:background="@drawable/titlebutton"
        android:textColor="@color/colorButton5"
        android:textStyle="bold"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/tx_image"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@id/tx_title"
        android:gravity="left"/>

    <TextView
        android:id="@+id/tx_likes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tx_title"
        android:layout_toRightOf="@id/tx_image"
        android:drawableRight="@drawable/heart"
        android:gravity="center"
        android:text="Likes"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tx_ingredientsLeft"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Ingredients Needed"
        android:drawableRight="@drawable/ingredients"
        android:gravity="center"
        android:layout_below="@id/tx_likes"
        android:layout_toRightOf="@id/tx_image"
        android:textSize="12sp" />

</RelativeLayout>