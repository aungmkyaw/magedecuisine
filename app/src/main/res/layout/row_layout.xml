<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Title"
        android:layout_above="@+id/tx_likes" />

    <ImageView
        android:id="@+id/tx_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tx_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tx_likes"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Likes"
        android:layout_above="@+id/tx_ingredientsLeft"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tx_ingredientsLeft"
        android:layout_alignEnd="@+id/tx_ingredientsLeft" />

    <TextView
        android:id="@+id/tx_ingredientsLeft"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Ingredients Needed"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tx_image"
        android:layout_alignEnd="@+id/tx_image" />

</RelativeLayout>