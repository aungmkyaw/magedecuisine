<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <ImageView
        android:id="@+id/imageDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TitleDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageDT"
        android:layout_toRightOf="@+id/imageDT"
        android:text="Title" />

    <TextView
        android:id="@+id/DescriptionDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TitleDT"
        android:layout_toEndOf="@+id/imageDT"
        android:layout_toRightOf="@+id/imageDT"
        android:text="Description" />

    <TextView
        android:id="@+id/LikesDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageDT"
        android:layout_toEndOf="@+id/imageDT"
        android:layout_toRightOf="@+id/imageDT"
        android:text="Likes" />
</RelativeLayout>