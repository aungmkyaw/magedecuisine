<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingLeft="0dp">

    <TextView
        android:id="@+id/number"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:text="number"
        android:paddingRight="5dp"
        android:gravity="center"
        android:textStyle="italic"
        android:background="@drawable/numbers"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/step"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="20dp"
        android:text="step"
        android:layout_toRightOf="@id/number"/>

    <TextView
        android:id="@+id/equipTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:text="Equipment Needed For This Step:"
        android:layout_below="@id/step" />

    <TextView
        android:id="@+id/equipname"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipment name"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_below="@id/equipTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/equipimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@id/equipname"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>